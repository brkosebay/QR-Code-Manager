# Example .env file that must be generated before building QR Code Manager

MONGODB_URI="mongodb://mongodb:27017/QRCodeSystem" # DO NOT change this one.

# Parameters to modify:
CSV_LOCATION="/usr/src/app/config/exampleList.csv" # CSV location, must be the path inside the Docker Container.
HOSTNAME="Example-Hostname.local" # The hostname of the computer that will be hosting the application.

# Microsoft Azure AD App Registration credentials
AZURE_TENANT_ID="your-tenant-id-here" # Azure AD Tenant ID (Directory ID)
AZURE_CLIENT_ID="your-client-id-here" # Azure AD Application (client) ID
AZURE_CLIENT_SECRET="your-client-secret-here" # Azure AD Client Secret value

# Microsoft Excel on OneDrive configuration
EXCEL_FILE_ITEM_ID="your-excel-file-drive-item-id" # OneDrive Drive Item ID of the Excel file containing form responses
EXCEL_WORKSHEET_NAME="Sheet1" # Worksheet name in the Excel file (default: Sheet1)
EXCEL_RANGE="D2:D" # Excel range for the email column (e.g., "D2:D" or "A2:A100")

